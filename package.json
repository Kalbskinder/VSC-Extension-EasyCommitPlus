{
  "name": "charcounter",
  "displayName": "Easy Commit +",
  "description": "",
  "publisher": "Kalbskinder",
  "icon": "images/logo.jpg",
  "version": "1.4.3",
  "repository": {
    "type": "git",
    "url": "https://github.com/Kalbskinder/VSCode-Extension-Wochenbericht-Helper"
  },
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onDidChangeTextEditorSelection"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "textCounterViewContainer",
          "title": "Wochenbericht Helper",
          "icon": "images/logo-transparent.png"
        }
      ]
    },
    "views": {
      "textCounterViewContainer": [
        {
          "id": "textCounterPanel",
          "name": "Wochenbericht Helper"
        }
      ]
    },
    "commands": [
      {
        "command": "extension.openGitCommitPanel",
        "title": "Open Git Commit Panel"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.98.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^9.21.0",
    "typescript": "^5.7.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
